# Database Configuration
# For local development (SQLite)
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/blockvote?schema=public"

# For production (MySQL)
# DATABASE_URL="mysql://username:password@localhost:3306/blockvote"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (for voter invitations and notifications)
EMAIL_SERVICE="gmail"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="BlockVote System <noreply@yourdomain.com>"

# Blockchain Configuration
BLOCKCHAIN_DIFFICULTY="4"
BLOCKCHAIN_STORAGE_PATH="./data/blockchain"
PROOF_OF_WORK_ENABLED="true"
MAX_VOTES_PER_BLOCK="100"

# Application Configuration
NODE_ENV="development"
PORT="3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security Configuration
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload Configuration
MAX_FILE_SIZE="5242880"
UPLOAD_PATH="./uploads"

# Admin Configuration
ADMIN_EMAIL="admin@blockvote.com"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-this-secure-password"

# Development Configuration
ENABLE_LOGGING="true"
LOG_LEVEL="info"
DEBUG_MODE="false"
